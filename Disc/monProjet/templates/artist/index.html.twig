{% extends 'base.html.twig' %}

{% block title %}Artist index{% endblock %}

{% block body %}
    <h1>Artist index</h1>

    <table class="table table-secondary table-bordered table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Url</th>

                {# On affiche le bouton show que quand quelqu'un est connecter #}
                {% if is_granted('ROLE_USER') %}
                    <th>actions</th>
                {% endif %}

            </tr>
        </thead>
        <tbody>
        {% for artist in artists %}
            <tr>
                <td>{{ artist.id }}</td>
                <td>{{ artist.name }}</td>
                <td>{{ artist.url }}</td>

            {# On affiche le bouton show que quand quelqu'un est connecter #}
                {% if is_granted('ROLE_USER') %}
                    <td>
                        <a class="btn btn-danger" href="{{ path('app_artist_show', {'id': artist.id}) }}" role="button">show</a>
                    </td>
                {% endif %}

            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    
{% endblock %}
