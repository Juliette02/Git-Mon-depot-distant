{% extends 'base.html.twig' %}

{% block title %}Artist{% endblock %}

{% block body %}
    <h1>Artist</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ artist.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ artist.name }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ artist.url }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-secondary mt-2" href="{{ path('app_artist_index') }}">back to list</a>

    {% if is_granted('ROLE_ADMIN') %}
        <a class="btn btn-secondary mt-2" href="{{ path('app_artist_edit', {'id': artist.id}) }}">edit</a>

        {{ include('artist/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
